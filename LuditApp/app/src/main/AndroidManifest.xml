<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ludit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icone"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icone"
        android:supportsRtl="true"
        android:theme="@style/FullScreen"
        android:usesCleartextTraffic="true">
        <activity android:name=".PontuacaoActivity"></activity>
        <activity android:name=".PerfilActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".FilhoActivity" />
        <activity android:name=".ConfiguracoesActivity" />
        <activity android:name=".MatematicaActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SliderActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashScreenActivity" />
        <activity android:name=".MusicaActivity" />
        <activity android:name=".CadastroActivity" />
        <activity android:name=".FilhoCadastroActivity" />
        <activity android:name=".AtividadesActivity" />
    </application>

</manifest>