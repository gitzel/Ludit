<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".user.FilhoActivity">



    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/foto_dodo"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvNomeFilho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPerfil"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Maria"
        android:textColor="@color/startColorGradient"
        android:textSize="36dp"
        />


    <Button
        android:id="@+id/btnAtividades"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_gradient_white"
        android:text="Atividades"
        android:textColor="@color/endColorGradient"
        android:textSize="24dp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_filter_frames_white_24dp"
        android:layout_below="@+id/tvNomeFilho"/>

    <Button
        android:id="@+id/btnPontuacao"
        android:layout_below="@+id/btnAtividades"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_gradient_white"
        android:text="Pontuação"
        android:textColor="@color/endColorGradient"
        android:textSize="24dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_star_white_24dp"
        android:paddingLeft="20dp"/>

    <Button
        android:id="@+id/btnSair"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:background="@drawable/button_option_menu_right"
        android:drawableRight="@drawable/ic_exit_to_app_white_24dp"
        android:paddingRight="12dp" />

</RelativeLayout>