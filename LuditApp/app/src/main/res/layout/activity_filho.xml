<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilhoActivity"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/holo_blue_dark"/>

        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="-75dp"
            android:layout_below="@+id/img_background"
            android:layout_centerHorizontal="true"
            android:background="@drawable/foto_dodo"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNomeFilho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgPerfil"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="24dp"
            android:text="Maria"
            android:textColor="@color/startColorGradient"

            />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/button_general" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/button_general" />

