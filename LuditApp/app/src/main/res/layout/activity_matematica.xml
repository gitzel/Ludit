<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".games.MatematicaActivity"
    android:background="#33535F">

    <TextView
        android:id="@+id/tvConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12"
        android:textAlignment="center"
        android:textSize="36dp"
        android:paddingVertical="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/matematica_visor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btnAzul"
                android:background="@drawable/matematica_azul"
                android:textSize="36dp"
                android:padding="40dp"
                android:layout_margin="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btnVermelho"
                android:textSize="36dp"
                android:padding="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/matematica_vermelho"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:layout_margin="20dp"
                android:padding="40dp"
                android:background="@drawable/matematica_verde"
                android:id="@+id/btnVerde"/>

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:padding="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/matematica_amarelo"
                android:id="@+id/btnAmarelo"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>