<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.FormasActivity"
    android:background="@drawable/fundo_formas"
    android:orientation="vertical">


    <ImageView
        android:layout_weight="2"
        android:id="@+id/imgConjunto"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        />


        <LinearLayout
            android:background="#273c75"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#2980b9"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    />
                <ImageView
                    android:id="@+id/btnAzul"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#c0392b"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    />

                <ImageView
                    android:id="@+id/btnVermelho"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#27ae60"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    />

                <ImageView
                    android:id="@+id/btnVerde"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#f39c12"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    />

                <ImageView
                    android:id="@+id/btnAmarelo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
        </LinearLayout>

</LinearLayout>