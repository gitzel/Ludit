<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/FullScreen"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".user.CadastroActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/desgin_bubble_right_top"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@drawable/design_bubble_left_bottom"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tvTituloCadastro"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/design_cabecario_geral"
        android:gravity="center"
        android:text="Cadastro"
        android:textColor="#fff"
        android:textSize="36dp" />

    <LinearLayout
        android:id="@+id/llCadastro"
        android:layout_width="wrap_content"
        android:layout_height="361dp"
        android:layout_below="@+id/tvTituloCadastro"
        android:layout_margin="40dp"
        android:background="@drawable/design_form"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:id="@+id/edNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Nome"
            android:inputType="textNoSuggestions" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Email"
            android:inputType="textEmailAddress|textNoSuggestions" />

        <EditText
            android:id="@+id/edSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Senha"
            android:inputType="textPassword|textNoSuggestions" />

        <EditText
            android:id="@+id/edConfimarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Confirmar senha"
            android:inputType="textPassword|textNoSuggestions" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCadastro"
        android:layout_marginTop="-65dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_gradient"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:text="Cadastrar"
        android:textColor="#fff"
        android:textSize="24dp" />


</RelativeLayout>