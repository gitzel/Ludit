<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.PerfilActivity">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/llPerfil"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnConfiguracoes">

        <TextView
            android:id="@+id/tvTituloPerfil"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:text="Bem vindo(a),\nPaulo"
            android:textColor="#fff"
            android:textSize="36dp"
            android:background="@drawable/design_cabecario_geral"
            android:gravity="center"
            android:padding="10dp"
            />

        <GridView
            android:id="@+id/grid_filhos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvTituloPerfil"
            android:numColumns="2">

        </GridView>
    </LinearLayout>

    <Button
        android:id="@+id/btnConfiguracoes"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_option_menu_left"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/ic_settings_white_24dp"
        android:paddingLeft="12dp"
        />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_option_menu_right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:drawableRight="@drawable/ic_exit_to_app_white_24dp"
        android:paddingRight="12dp"
        />

</RelativeLayout>