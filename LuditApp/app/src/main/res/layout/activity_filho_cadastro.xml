<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".user.FilhoCadastroActivity">

    <ImageView
        android:id="@+id/imgTituloCadastroFilho"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/design_cabecario_geral"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/design_bubble_two_left_bottom"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/imgPerfilFilho"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_circle"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/llCadastroFilho"
        android:layout_width="336dp"
        android:layout_height="426dp"
        android:layout_below="@+id/imgTituloCadastroFilho"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/design_form"
        android:orientation="vertical"
        android:paddingTop="70dp">

        <EditText
            android:id="@+id/edNomeFilho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/fredoka"
            android:hint="Nome"
            android:inputType="textNoSuggestions"
            android:textColor="@color/startColorGradient"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/edDeficiencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/fredoka"
            android:hint="Deficiência"
            android:inputType="textNoSuggestions"
            android:textColor="@color/startColorGradient"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/edTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/fredoka"
            android:hint="Observações"
            android:inputType="textNoSuggestions"
            android:textColor="@color/startColorGradient"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnDataDeNascimento"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/button_gradient"
            android:fontFamily="@font/fredoka"
            android:inputType="textNoSuggestions"
            android:text="Nascimento"
            android:textColor="#fff"
            android:textSize="24dp" />


    </LinearLayout>

    <Button
        android:id="@+id/btnCadastrarFilho"
        android:layout_width="189dp"
        android:layout_height="67dp"
        android:layout_below="@+id/llCadastroFilho"
        android:layout_marginTop="-25dp"
        android:background="@drawable/button_gradient"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        android:text="Salvar"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_option_menu_right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:drawableRight="@drawable/ic_exit_to_app_white_24dp"
        android:paddingRight="12dp"
        />

</RelativeLayout>