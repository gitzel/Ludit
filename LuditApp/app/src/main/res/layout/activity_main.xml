<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/imgJogos"
        android:src="@drawable/xvbfxb"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="40dp">
    </ImageView>

    <ImageView
        android:background="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="40dp">
    </ImageView>

    <ImageView
        android:background="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="40dp">
    </ImageView>

    <ImageView
        android:background="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="40dp">
    </ImageView>

    </LinearLayout>
</ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnJogos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_menu"
                android:fontFamily="@font/fredoka"
                android:text="Jogar"
                android:textSize="24dp"
                android:drawableLeft="@drawable/ic_game"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="30dp"

                />
            <Button
                android:id="@+id/btnMusicas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_menu"
                android:textSize="24dp"
                android:drawableLeft="@drawable/ic_song"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:paddingLeft="25dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnVideos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_menu"
                android:textSize="24dp"
                android:drawableLeft="@drawable/ic_videos"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:paddingLeft="25dp"
                />

            <Button
                android:id="@+id/btnLivros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_menu"
                android:textSize="24dp"
                android:drawableLeft="@drawable/ic_books"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:paddingLeft="25dp"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>